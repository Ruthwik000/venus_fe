{
    "name": "chili3d",
    "version": "0.6.1",
    "description": "",
    "documentVersion": "0.7",
    "author": "仙阁",
    "scripts": {
        "build": "npm run build:css && rspack build",
        "build:css": "npx @tailwindcss/cli -i ./packages/chili-web/src/input.css -o ./packages/chili-web/src/output.css",
        "build:wasm": "cd cpp && cmake --preset release && cmake --build --preset release",
        "check": "biome check --write",
        "dev": "npm run build:css && rspack dev",
        "format": "biome check --write . && npx clang-format --style=Webkit --sort-includes -i ./cpp/src/**",
        "preview": "rspack preview",
        "release": "node scripts/release.mjs",
        "setup:wasm": "node scripts/setup_wasm_deps.mjs",
        "test": "rstest",
        "testc": "rstest --coverage"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.{ts,js,css,json,mjs}": [
            "biome check --write"
        ],
        "*.{c,h,cxx,hxx,cpp,hpp}": [
            "clang-format --style=Webkit --sort-includes -i"
        ]
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@biomejs/biome": "2.3.12",
        "@rspack/cli": "1.7.3",
        "@rspack/core": "1.7.3",
        "@rstest/core": "^0.8.0",
        "@rstest/coverage-istanbul": "^0.2.0",
        "autoprefixer": "^10.4.24",
        "clang-format": "^1.8.0",
        "dotenv": "^17.2.4",
        "happy-dom": "^20.3.9",
        "lint-staged": "16.2.7",
        "postcss": "^8.5.6",
        "postcss-loader": "^8.2.0",
        "simple-git-hooks": "2.13.1",
        "tailwindcss": "^4.1.18",
        "ts-checker-rspack-plugin": "^1.2.6",
        "typescript": "5.9.3",
        "typescript-plugin-css-modules": "^5.2.0",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "@splinetool/runtime": "^1.12.51",
        "@tailwindcss/cli": "^4.1.18",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "firebase": "^12.9.0",
        "framer-motion": "^12.34.0",
        "lucide-react": "^0.563.0",
        "tailwind-merge": "^3.4.0"
    }
}
